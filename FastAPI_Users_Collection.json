	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health & Info",
			"item": [
				{
					"name": "Root - Info da API",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/",
							"host": ["{{base_url}}"],
							"path": [""]
						}
					}
				},
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/health",
							"host": ["{{base_url}}"],
							"path": ["health"]
						}
					}
				},
				{
					"name": "API Docs (Swagger)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/docs",
							"host": ["{{base_url}}"],
							"path": ["docs"]
						}
					}
				}
			]
		},
		{
			"name": "Users CRUD",
			"item": [
				{
					"name": "1. Criar Usuário - Completo",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Salvar user_id para usar em outras requisições",
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('user_id', response.user_id);",
									"    console.log('User ID salvo:', response.user_id);",
									"}",
									"",
									"// Testes",
									"pm.test('Status code é 201', function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test('Resposta contém user_id', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('user_id');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"user_name\": \"João Silva\",\n  \"user_email\": \"joao.silva@exemplo.com\",\n  \"password\": \"MinhaSenh@123\",\n  \"is_work\": true,\n  \"user_type\": \"admin\",\n  \"birth_day\": \"1990-05-15\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/users/",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "users", ""]
						}
					}
				},
				{
					"name": "2. Criar Usuário - Mínimo",
