# Database
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/dbname
DATABASE_URL_SYNC=postgresql://username:password@localhost:5432/dbname


# =============================================
# SECURITY CONFIGURATION
# =============================================
SECRET_KEY=your-super-secret-key-change-in-production-must-be-at-least-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================
# APP CONFIGURATION
# =============================================
APP_NAME=Resume Analyzer API
VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# =============================================
# CORS CONFIGURATION
# =============================================
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8000"]

# =============================================
# LLM API CONFIGURATION (pelo menos uma é obrigatória)
# =============================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GROQ_API_KEY=gsk_your-groq-key-here
GEMINI_API_KEY=your-gemini-key-here

# LLM Settings
DEFAULT_LLM_PROVIDER=openai
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3

# =============================================
# FILE UPLOAD CONFIGURATION
# =============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["application/pdf", "application/msword", "application/vnd.openxmlformats-officedocument.wordprocessingml.document", "text/plain"]
UPLOAD_DIRECTORY=uploads

# =============================================
# RABBITMQ CONFIGURATION
# =============================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# =============================================
# REDIS CONFIGURATION
# =============================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# =============================================
# EMAIL CONFIGURATION (opcional)
# =============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True
FROM_EMAIL=noreply@resume-analyzer.com

# =============================================
# LOGGING CONFIGURATION
# =============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================
# RATE LIMITING CONFIGURATION
# =============================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================
# ANALYSIS CONFIGURATION
# =============================================
ANALYSIS_QUEUE_NAME=analysis_queue
ANALYSIS_BATCH_SIZE=10
ANALYSIS_TIMEOUT=300

# Score weights (devem somar aproximadamente 1.0)
SCORE_WEIGHT_EXPERIENCE=0.35
SCORE_WEIGHT_ACADEMIC=0.30
SCORE_WEIGHT_COURSES=0.20
SCORE_WEIGHT_STRONG_POINTS=0.15
SCORE_WEIGHT_WEAK_POINTS=-0.10

# =============================================
# MONITORING CONFIGURATION
# =============================================
ENABLE_METRICS=True
METRICS_PORT=9090